<html>
    <head>
        <style type="text/css">
            body {
                display: flex;
                flex-direction: column;
                flex-flow: column;
                align-items: center;
                background-color: #FAFAFA;
                color: #BDBDBD;
                font-family: sans-serif;
                font-size: 0.75em;

            }

            img {
                margin-top: 4em;
                width: 48em;
            }

            footer {
                min-height: 100%;
                margin-top: auto;
                vertical-align: text-bottom;
            }

        </style>
        <script type="text/javascript">
            function refresh() {
                for (var img of document.getElementsByTagName("img")) {
                    img.src = img.src.split("?")[0] + "?" + Date.now();
                }
                setTimeout(refresh, 1500);
            }
            refresh();
        </script>
    </head>
    <body>
        <header></header>
        {% for svg in svgs %}
            <img src=rrd/{{hostname}}/{{svg}}.svg></img>
        {% endfor %}
        <footer></footer>
    </body>
</html>
